<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NSW DS Footer</masterLabel>
    <description>A footer in the NSW Government Design System</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Statement" name="statement"
                type="String" description="Statement display at the top of the footer"></property>
            <property label="Links" name="links" default="[Footer links](#)"
                type="String" description="Links in Markdown format"></property>
            <property label="Copyright mention" name="copyrightMention"
                type="String" description="Copyright text in Markdown format"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
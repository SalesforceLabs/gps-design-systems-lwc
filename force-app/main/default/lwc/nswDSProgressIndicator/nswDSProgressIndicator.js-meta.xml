<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NSW DS Progress Indicator</masterLabel>
    <description>A progress indicator in the NSW Government Design System</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Current Step" name="currentStep"
                      type="Integer" description="The index of the current step"></property>
            <property label="Total Steps" name="totalSteps"
                      type="Integer" description="The total number of steps"></property>
            <property label="NSW Class" name="nswClass"
                      type="String" description="Additional styling to apply"></property>
        </targetConfig>
        <targetConfig targets="lightning__FlowScreen">
            <property label="Current Step" name="currentStep"
                      type="Integer" description="The index of the current step"
                      role="inputOnly">
            </property>
            <property label="Total Steps" name="totalSteps"
                      type="Integer" description="The total number of steps"
                      role="inputOnly">
            </property>
            <property label="NSW Class" name="nswClass"
                      type="String" description="Additional styling to apply"
                      role="inputOnly">
            </property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
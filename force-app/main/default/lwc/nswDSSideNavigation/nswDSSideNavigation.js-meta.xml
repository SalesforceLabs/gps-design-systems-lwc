<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NSW DS Side Navigation</masterLabel>
    <description>A side navigation menu in the NSW Government Design System</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Title Link" name="titleLink" default="[Side navigation](#)"
                type="String" description="Title Link in Markdown format"></property>
            <property label="Navigation Developer Name" name="navDevName"
                type="String" description="Developer Name of the Navigation to be rendered"></property>
            <property label="NSW Class" name="nswClass"
                type="String" description="Additional styling to apply"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NSW DS Card</masterLabel>
    <description>A card in the NSW Government Design System</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Title Link" name="titleLink" default="[Card](#)"
                type="String" description="Title Link in Markdown format"></property>
            <property label="Is Headline" name="isHeadline" default="true"
                type="Boolean" description="Render the title as a headline"></property>
            <property label="Content" name="content"
                type="String" description="Content in Markdown format"></property>
            <property label="Tag" name="tag"
                type="String" description="Tag categorising the card"></property>
            <property label="Image Src" name="imageSrc"
                type="String" description="Image Source"></property>
            <property label="Image Alt" name="imageAlt"
                type="String" description="Image Alternative Text"></property>
            <property label="Date ISO" name="dateIso"
                type="String" description="Date displayed on card in ISO format"></property>
            <property label="NSW Class" name="nswClass"
                type="String" description="Additional styling to apply"></property>
        </targetConfig>
        <targetConfig targets="lightning__FlowScreen">
            <property label="TitleLink" name="titleLink"
                type="String" role="inputOnly"
                description="Title Link in Markdown format"></property>
            <property label="Is Headline" name="isHeadline"
                type="Boolean" role="inputOnly" default="true"
                description="Render the title as a headline"></property>
            <property label="Content" name="content"
                type="String" role="inputOnly"
                description="Content in Markdown format"></property>
            <property label="Tag" name="tag"
                type="String" role="inputOnly"
                description="Tag categorising the card"></property>
            <property label="Date" name="date"
                type="Date" role="inputOnly"
                description="Date displayed on card"></property>
            <property label="Image Src" name="imageSrc"
                type="String" role="inputOnly"
                description="Image Source"></property>
            <property label="Image Alt" name="imageAlt"
                type="String" role="inputOnly"
                description="Image Alternative Text"></property>
            <property label="NSW Class" name="nswClass"
                type="String" role="inputOnly"
                description="Additional styling to apply"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
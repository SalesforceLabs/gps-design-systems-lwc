<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NSW DS Breadcrumb</masterLabel>
    <description>A breadcrumb in the NSW Government Design System</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Items" name="items"
                type="String" description="Items in Markdown link format"></property>
            <property label="NSW Class" name="nswClass"
                type="String" description="Additional styling to apply"></property>        </targetConfig>
        <targetConfig targets="lightning__FlowScreen">
            <property label="Items" name="items"
                type="String" role="inputOnly"
                description="Item links in Markdown format"></property>
            <property label="NSW Class" name="nswClass"
                type="String" default="false" role="inputOnly"
                description="Additional styling to apply"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
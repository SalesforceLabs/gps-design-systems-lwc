<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NSW DS Content Block</masterLabel>
    <description>A content block in the NSW Government Design System</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Title" name="title" default="Content block"
                type="String" description="Title of the content block"></property>
            <property label="Content" name="content"
                type="String" description="Content in Markdown format"></property>
            <property label="Links" name="links"
                type="String" description="Links in Markdown format"></property>
            <property label="Button Link" name="buttonLink"
                type="String" description="Single Link for the button in Markdown format"></property>
            <property label="Image Src" name="imageSrc"
                type="String" description="Image Source"></property>
            <property label="Image Alt" name="imageAlt"
                type="String" description="Image Alternative Text"></property>
            <property label="NSW Class" name="nswClass"
                type="String" description="Additional styling to apply"></property>
        </targetConfig>
        <targetConfig targets="lightning__FlowScreen">
            <property label="Title" name="title" role="inputOnly"
                type="String" description="Title of the content block"></property>
            <property label="Content" name="content" role="inputOnly"
                type="String" description="Content in Markdown format"></property>
            <property label="Links" name="links" role="inputOnly"
                type="String" description="Links in Markdown format"></property>
            <property label="Button Link" name="buttonLink" role="inputOnly"
                type="String" description="Single Link for the button in Markdown format"></property>
            <property label="Image Src" name="imageSrc" role="inputOnly"
                type="String" description="Image Source"></property>
            <property label="Image Alt" name="imageAlt" role="inputOnly"
                type="String" description="Image Alternative Text"></property>
            <property label="NSW Class" name="nswClass" role="inputOnly"
                type="String" description="Additional styling to apply"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
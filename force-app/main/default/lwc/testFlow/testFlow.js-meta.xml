<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Test Component</masterLabel>
    <description>A test component demonstrating flow value mapping issues</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property label="Str" name="str"
                type="String" role="inputOnly"
                description="A string parameter"></property>

            <property label="Camel Str" name="camelStr"
                type="String" role="inputOnly"
                description="Another string parameter"></property>

            <property label="Int" name="int"
                type="Integer" min="1" max="255" role="inputOnly"
                description="An integer parameter"></property>

            <property label="Int Value" name="intValue"
                type="Integer" min="1" max="255" role="inputOnly"
                description="Another integer parameter"></property>

            <property label="Max Length" name="maxLength"
                type="Integer" min="1" max="255" role="inputOnly"
                description="Maximum length"></property>
            <!-- even though this is accepted, the maxLength api attribute is
                 never set when maxLength is in camel case -->

            <property label="Min Length" name="minlength"
                type="Integer" min="0" max="255" role="inputOnly"
                description="Minimum length (small caps)"></property>
            <!-- this is accepted, and the minlength api attribute is set
                 but the same issue as above happens for minLength -->

            <property label="Average Length" name="avgLength"
                 type="Integer" min="0" max="255" role="inputOnly"
                 description="Average length (camel case)"></property>
             <!-- this works, so it's really only about minLength and maxLength -->
 
            <!--
            <property label="Dec" name="dec"
                type="Number" role="inputOnly"
                description="A decimal parameter"></property>
            -->
            <!-- contrary to the indications given in
                https://developer.salesforce.com/docs/component-library/documentation/en/lwc/lwc.use_flow_data_types
                Number cannot be used
                with the indication Type 'Number' is either not supported by 'lightning__FlowScreen' or does not exist -->

            <property label="Bool" name="bool"
                type="Boolean" role="inputOnly"
                description="A boolean parameter"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
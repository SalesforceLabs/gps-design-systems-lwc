            <property label="Subtitle" name="subtitle" type="String"></property>
            <property label="Button Link" name="buttonLink" type="String"></property>
            <property label="Image Src" name="imageSrc" type="String"></property>
            <property label="Image Alt" name="imageAlt" type="String"></property>

<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NSW DS Hero Banner</masterLabel>
    <description>A hero banner in the NSW Government Design System</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Title Link" name="titleLink" default="[Hero banner](#)"
                type="String" description="Title and Link in Markdown link format"></property>
            <property label="Content" name="content"
                type="String" description="Content text in Markdown format"></property>
            <property label="Image Src" name="imageSrc"
                type="String" description="Image Source"></property>
            <property label="Image Alt" name="imageAlt"
                type="String" description="Image Alternative Text"></property>
            <property label="NSW Class" name="nswClass"
                type="String" description="Additional styling to apply"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
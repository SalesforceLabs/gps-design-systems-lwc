<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NSW DS Notification</masterLabel>
    <description>A notification in the NSW Government Design System</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Type" name="type" datasource="info,success,warning,error"
                type="String" description="Type of notification"></property>
            <property label="Title" name="title" default="Notification"
                type="String" description="Title label"></property>
            <property label="Content" name="content"
                type="String" description="Content in Markdown format"></property>
            <property label="NSW Class" name="nswClass"
                type="String" description="Additional styling to apply"></property>
        </targetConfig>
        <targetConfig targets="lightning__FlowScreen">
            <property label="Type" name="type"
                type="String" role="inputOnly"
                description="Type (error, warning, success, info)"></property>
            <property label="Title" name="title"
                type="String" role="inputOnly"
                description="Title label"></property>
            <property label="Content" name="content"
                type="String" role="inputOnly"
                description="Content in Markdown format"></property>
            <property label="NSW Class" name="nswClass"
                type="String" role="inputOnly"
                description="Additional styling to apply"></property>
        </targetConfig> 
    </targetConfigs>
</LightningComponentBundle>